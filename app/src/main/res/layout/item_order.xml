<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">
    <ir.beigirad.zigzagview.ZigzagView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:zigzagBackgroundColor="@color/orange"
        app:zigzagElevation="8dp"
        app:zigzagHeight="8dp"
        app:zigzagPaddingContent="10dp"
        app:zigzagShadowAlpha="0.6"
        app:zigzagSides="bottom">

        <!--Linear layout created-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtorderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status:"
                    android:textSize="22dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/prepare"
                    android:drawableTint="@color/white"/>
                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing"
                    android:textSize="22dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderDate"
                    android:text="12/19/2022"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderTime"
                    android:text="00:47 AM"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/dot"
                    android:drawableTint="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"
                    android:drawableTint="@color/white"/>
                <TextView
                    android:id="@+id/txtorderQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item"
                    android:layout_marginStart="5dp"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"
                    android:drawableTint="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderPrice"
                    android:text="50"
                    android:drawableStart="@drawable/dot"
                    android:drawableEnd="@drawable/dollar"
                    android:drawableTint="@color/white"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:fontFamily="@font/airbnb_cereal"
                    android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>

    </ir.beigirad.zigzagview.ZigzagView>

</RelativeLayout>