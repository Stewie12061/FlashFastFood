<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminFragment.ChartDayFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/showChartButton"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:text="Show Profit of each day" />

        <Button
            android:id="@+id/showChartYearButton"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:textStyle="bold"
            android:text="Show Chart year" />


        <Button
            android:id="@+id/btn_date_range_picker"
            android:text="Select Date Range"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="55dp"/>


    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>